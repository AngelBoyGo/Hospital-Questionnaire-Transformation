{
  "name": "metis-transformation-engine",
  "version": "1.0.0",
  "description": "Metis Hospital Deployment Transformation Engine - Patent-Protected System",
  "main": "src/index_minimal.js",
  "scripts": {
    "start": "node src/index_minimal.js",
    "dev": "nodemon src/index_minimal.js",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --detectOpenHandles",
    "test:integration": "jest tests/integration --detectOpenHandles",
    "test:integration:structured": "RUN_INTEGRATION_TESTS=true jest tests/integration/StructuredGeneration.e2e.test.js --detectOpenHandles --runInBand",
    "test:performance": "RUN_PERF_TESTS=true jest tests/performance --detectOpenHandles --runInBand",
    "test:performance:structured": "RUN_PERF_TESTS=true jest tests/performance/StructuredGenerationBenchmark.test.js --detectOpenHandles --runInBand",
    "test:container": "RUN_CONTAINER_TESTS=true jest tests/deployment --detectOpenHandles --runInBand",
    "test:security": "jest tests/security --detectOpenHandles",
    "test:all": "npm test && npm run test:integration && npm run test:security",
    "test:structured": "npm run test:integration:structured && npm run test:performance:structured",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write src/",
    "docker:build": "docker build -t healthcare-transform:latest .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v && docker system prune -f",
    "k8s:deploy": "kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete -f k8s/",
    "k8s:status": "kubectl get pods -n healthcare-transform",
    "k8s:logs": "kubectl logs -f deployment/healthcare-transform -n healthcare-transform",
    "docs:serve": "swagger-ui-serve docs/openapi.yaml",
    "docs:validate": "swagger-codegen validate -i docs/openapi.yaml",
    "monitoring:up": "docker-compose -f docker-compose.yml -f monitoring/docker-compose.monitoring.yml up -d",
    "monitoring:down": "docker-compose -f docker-compose.yml -f monitoring/docker-compose.monitoring.yml down",
    "prod:deploy": "npm run test:all && npm run docker:build && npm run k8s:deploy",
    "prod:status": "npm run k8s:status && kubectl get ingress -n healthcare-transform",
    "logs:clear": "node -e \"require('fs').rmSync('./logs', {recursive: true, force: true}); console.log('Logs cleared');\""
  },
  "keywords": [
    "healthcare",
    "transformation",
    "AI",
    "patent",
    "hospital"
  ],
  "author": "Metis AI",
  "license": "PROPRIETARY",
  "dependencies": {
    "@kubernetes/client-node": "^1.3.0",
    "ajv": "^8.12.0",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "docx": "^8.5.0",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "express-rate-limit": "^6.11.2",
    "helmet": "^7.2.0",
    "joi": "^17.9.2",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.2",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^1.1.1",
    "pg": "^8.11.3",
    "puppeteer": "^24.16.1",
    "redis": "^4.6.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "autocannon": "^8.0.0",
    "eslint": "^8.47.0",
    "jest": "^29.6.4",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.2",
    "prom-client": "^15.1.3",
    "supertest": "^6.3.3",
    "swagger-codegen-cli": "^2.2.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
